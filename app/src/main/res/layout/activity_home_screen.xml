<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <!-- Background -->
    <ImageView
        android:id="@+id/homeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/home_background"
        android:alpha="0.85" />

    <!-- App Logo -->
    <ImageView
        android:id="@+id/homeLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/homeLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Find Playground -->
    <Button
        android:id="@+id/findPlaygroundBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Find Playgrounds"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#2C2C2C"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- My Bookings -->
    <Button
        android:id="@+id/myBookingsBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="My Bookings"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#2C2C2C"
        app:layout_constraintTop_toBottomOf="@id/findPlaygroundBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Favorites -->
    <Button
        android:id="@+id/favoritesBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Favorites"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#2C2C2C"
        app:layout_constraintTop_toBottomOf="@id/myBookingsBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Notifications -->
    <Button
        android:id="@+id/notificationsBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Notifications"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#2C2C2C"
        app:layout_constraintTop_toBottomOf="@id/favoritesBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Settings -->
    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#2C2C2C"
        app:layout_constraintTop_toBottomOf="@id/notificationsBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
