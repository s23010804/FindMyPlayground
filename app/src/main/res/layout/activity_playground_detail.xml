<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/playgroundImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_playground"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/playgroundName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playground Name"
            android:textSize="28sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playgroundLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="23sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/playgroundDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a fun and safe indoor playground with slides, ball pits, and much more."
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/bookNowBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Book Now"
            android:textStyle="bold"
            android:backgroundTint="#2C2C2C"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp" />
    </LinearLayout>
</ScrollView>
